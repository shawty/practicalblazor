<br />
<h3>UserList</h3>

<table border="1" cellpadding="2" cellspacing="2">
  <thead>
    <tr>
      <th>ID#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    @foreach (var user in _allUsers)
    {
      <tr>
        <td>@user.Id</td>
        <td>@user.FirstName</td>
        <td>@user.LastName</td>
        <td style="text-align: right;">Edit Buttons</td>
      </tr>
    }
  </tbody>

</table>

@code {

  [Inject]
  private Users _usersService { get; set; }

  private List<UserModel> _allUsers => _usersService.FetchAll();

}
